record(ai, "$(PV)_Rate") {
    field(DESC,"Update rate")
    field(PINI,"YES")
    field(PREC,"3")
    field(EGU, "Hz")
    field(VAL, "0")
    field(MDEL, "-1")
}

record(longin, "$(PV)_Error") {
    field(DESC,"Error count")
    field(PINI,"YES")
    field(VAL, "0")
}


